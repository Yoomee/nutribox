.row
  .span8
    %h1 Available Order Options
  .span4
    =link_to(new_available_order_option_path, :class => "btn btn-primary pull-right mt-1") do
      %i.icon-plus
      New order option
-if @available_order_options.empty?
  %p There aren't any order options available
-else
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th        
    %tbody
      -@available_order_options.each do |option|
        %tr
          %td
            =option.to_s          
          %td.span4=link_to("Edit", edit_available_order_option_path(option))
          %td.span4=link_to("Delete", available_order_option_path(option), :method => :delete)
          %td