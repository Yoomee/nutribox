%h1.pull-left.mb-2
  Boxes for delivery
  %small
    =@shipping_date.date.stamp("Monday 11th January 2013")
.clearfix
-@deliveries.each do |box_type, option, deliveries|
  %h2.pull-left
    =Order.box_name(box_type)
    =option[1]
  -unless deliveries.empty?
    =link_to(shipping_date_path(@shipping_date, :format => 'xls', :box => box_type, :option_id => option[0]), :class => 'btn btn-primary pull-right') do
      %i.icon-download-alt
      Download
  .clearfix
  -if deliveries.empty?
    %p.lead.muted There are no deliveries for this date.
  -else
    %table.table.table-striped
      %thead
        %tr
          %th ID
          %th Customer
          %th Subscription type
          %th Options
          %th Gift
          %th Comment
          %th Delivery address
          %th Paid
          %th Tx&nbsp;Code
      %tbody
        -deliveries.each do |delivery|
          %tr
            %td.span1
              =delivery.id
            %td="#{delivery.user.last_name}, #{delivery.user.first_name}"
            %td=pluralize(delivery.number_of_months,"month")
            %td=delivery.order.options.join(', ')
            %td
              =delivery.gift? ? "Yes" : "No"
            %td=delivery.order.comment
            %td.span4=delivery.address
            %td
              -if delivery.paid_for?
                .label.label-success YES
              -else
                .label.label-important NO
                -if delivery.in_current_month?
                  %br
                  =link_to 'Try&nbsp;again'.html_safe, shipping_date_delivery_path(@shipping_date, delivery), :method => :put, :id => 'repeat-repeat-payment'
            %td=delivery.tx_code
  %br
  %hr
  %br
    