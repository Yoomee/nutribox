.row
  .span8
    %h1 Surveys

.row

  -if @months.nil?
    %p.lead No products yet
  -else    
    %table.table.table-striped
      %thead
        %tr
          %th Month  
        
      -@months.each do |month|
        %tr
          %td.span3
            =link_to '' do
              =Date::MONTHNAMES[month.month]
              =month.year 
          %td
            =link_to 'Preview survey', survey_preview_path(:year => month.year, :month => month.month, :box_type => 'standard'), :target => '_new'  
            &nbsp;             
            =link_to "View recipients", survey_recipients_path(:month => month.month, :year => month.year)
            &nbsp;            
            =link_to "Send emails", send_emails_survey_path(:month => month.month, :year => month.year), :confirm => "Are you sure you want to send emails to all customers in this month?"
            &nbsp;
            =link_to "View results", survey_results_path(:month => month.month, :year => month.year)