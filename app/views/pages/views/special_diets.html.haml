.span12.special-diets
  .header-images
    =image_tag('box-standard-1.png', :class => "nutribox-image")
    =image_for(@page, :class => "box-theme-title-image")
  .row
    .span12.mt-3.mb-3
      =contentize(@page.text)
  .row
    .span12
      =render('shared/related_blog_posts')
    .span8
      =options_panel do
        =link_if_can("Edit page", [:edit, @page])
        =link_if_can("Delete page", [:destroy, @page], :confirm => "Are you sure?") unless @page.slug.present?
        =link_if_can("New page", [:new, Page.new])